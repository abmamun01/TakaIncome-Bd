<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF2F4"
    android:scrollbars="none"
    tools:context=".Fragments.Home_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140mdp"
            android:background="@drawable/up_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="56dp"
                android:text="Hi, Good Evening"
                android:textColor="#0253B3"
                android:textSize="@dimen/_9font_mdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mamun"
                android:textColor="#0253B3"
                android:textSize="@dimen/_14font_mdp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_120mdp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_ring"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:fontFamily="@font/poppins"
                    android:text="Your Points"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14font_mdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.508"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/poppins"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18font_mdp"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/watch_ads_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110mdp"
            android:layout_marginStart="@dimen/_16mdp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/_16mdp"
            android:background="@drawable/ads_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:src="@drawable/ic_ads_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:text="ভিডিও এড দেখুন"
                android:textColor="@color/white"
                android:textSize="@dimen/_22font_mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5mdp"
                android:text="30 Points"
                android:textColor="@color/white"
                android:textSize="@dimen/_13font_mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/small_watch_ads_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80mdp"
            android:layout_marginStart="@dimen/_16mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_16mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watch_ads_id">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/small_ads_ripple_effect" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="83dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_ads_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins"
                android:text="ছোট এড দেখুন"
                android:textColor="@color/white"
                android:textSize="@dimen/_20font_mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5mdp"
                android:text="15 Points"
                android:textColor="@color/white"
                android:textSize="@dimen/_13font_mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25mdp"
            android:layout_marginStart="@dimen/_15mdp"
            android:layout_marginTop="@dimen/_8mdp"
            android:layout_marginEnd="@dimen/_15mdp"
            android:background="@color/white"
            app:cardCornerRadius="6dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/small_watch_ads_id">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_18mdp"
                android:fontFamily="@font/poppins"
                android:text="TASK ACTIVITY"

                android:textColor="#3E3E47" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/quiz_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10mdp"

                    android:layout_weight="1"
                    android:background="@drawable/game_bg">

                    <ImageView
                        android:id="@+id/iconID1"
                        android:layout_width="@dimen/_64mdp"
                        android:layout_height="@dimen/_64mdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_quiz_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iconID1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_7mdp"
                        android:fontFamily="@font/poppins"
                        android:text="কুইজ"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13font_mdp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_4mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        android:text="15+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10mdp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/gameTaskId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10mdp"
                    android:layout_weight="1"
                    android:background="@drawable/quiz_shape">

                    <ImageView
                        android:id="@+id/iconID"
                        android:layout_width="@dimen/_64mdp"
                        android:layout_height="@dimen/_64mdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_tic_tac_toe" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iconID"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_7mdp"
                        android:fontFamily="@font/poppins"
                        android:text="গেম"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13font_mdp" />


                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_4mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        android:text="15+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10mdp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/commonKnowledgedTaskId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10mdp"
                    android:layout_weight="1"

                    android:background="@drawable/common_knowledge_bg">

                    <ImageView
                        android:id="@+id/iconID2"
                        android:layout_width="@dimen/_64mdp"
                        android:layout_height="@dimen/_64mdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_ck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iconID2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_7mdp"
                        android:fontFamily="@font/poppins"
                        android:text="সাধারন জ্ঞান"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13font_mdp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_4mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        android:text="10+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10mdp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/scienceTaskID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10mdp"
                    android:layout_weight="1"
                    android:background="@drawable/science_bg"

                    >

                    <ImageView
                        android:id="@+id/iconID3"
                        android:layout_width="@dimen/_64mdp"
                        android:layout_height="@dimen/_64mdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_sc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iconID3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_7mdp"
                        android:fontFamily="@font/poppins"
                        android:text="বিজ্ঞান"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13font_mdp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_4mdp"
                        android:layout_marginTop="@dimen/_4mdp"
                        android:layout_marginEnd="@dimen/_4mdp"
                        android:layout_marginBottom="@dimen/_4mdp"
                        android:text="15+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10mdp" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>