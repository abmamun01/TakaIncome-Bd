<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_marginStart="@dimen/_20mdp"
    android:layout_marginEnd="@dimen/_20mdp"
    tools:context=".Fragments.SignIn_Fragments"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >

        <EditText
            android:id="@+id/emailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"

            android:layout_marginTop="112dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/email_address_txt"
            android:inputType="textEmailAddress"
            android:padding="9dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/password_txt"
            android:inputType="textPassword"
            android:padding="9dp"
            android:paddingStart="16dp"

            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/emailID"
            app:layout_constraintStart_toStartOf="@+id/emailID"
            app:layout_constraintTop_toBottomOf="@+id/emailID" />


        <RelativeLayout
            android:id="@+id/sing_btn_id"
            android:layout_width="@dimen/_100mdp"
            android:layout_height="@dimen/_37mdp"
            android:background="@drawable/ripple_effect_sign_in_btn"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/_20mdp"

            android:elevation="6dp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <TextView
                android:id="@+id/sss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="Sign In"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="@dimen/_18mdp"
                android:layout_height="@dimen/_18mdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/sss"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:tint="@color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By pressing “submit” you agree to our"
            android:textColor="#8A9EAD"
            android:layout_marginTop="@dimen/_20mdp"
            app:layout_constraintEnd_toEndOf="@+id/passwordID"
            app:layout_constraintStart_toStartOf="@+id/passwordID"
            app:layout_constraintTop_toBottomOf="@+id/passwordID" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terms &amp; conditions"
            android:textColor="#F13B2C"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>